<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
        <title>{% block title %}Hello City{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="flex flex-col justify-between items-center min-h-screen">
        <main role="main" class="my-6 flex flex-col justify-center items-center">
            {% block body %}{% endblock %}
        </main>

        <footer class="my-6">
            <p class="text-gray-400">
            &copy; Copyright {{ 'now'|date('Y') }} &middot; 
            <a href="{{ path('app_about') }}" class="text-indigo-400 hover:text-indigo-600 underline">About</a>
            </p>
        </footer>
    </body>
</html>
